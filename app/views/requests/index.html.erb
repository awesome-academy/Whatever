<% provide(:title, 'All Request') %>

<div class="khung">
	<h1><%= t('form.request.all') %></h1>
	<div class="khung-container">
		<ul class="content">
			<% @requests.each do |request| %>
				<li class="content-wrapper">
						<ul class="contentBx">
							<li>
							  	<a href="http://localhost:3000/products/1/requests/new?locale=en" target="_blank">
							        <div class="img"><%= link_to image_tag("audio1.jpg", width:"90px" ) %></div>		  		
							    </a>
							    <%= request.user.name %>
					    	
			                   
					    	</li> 					    
					    	<li class="pice"><%= t('form.label.price') %>:
					    		<span id="price"><%= request.product.price %></span>
					    	</li>


					    	<li class="quantity"><%= t('form.label.quantity') %>:

					    		<span id="quantity"><%= request.quantity %></span>
					    	</li>

					    	<li class="total"><%= t('form.request.total') %>: 
					    		<span id="total-money"><%= request.product.price * request.quantity%></span>
					    	</li>

					    	<li class="destroy">
					    		<%= link_to t('form.submit.delete'), product_request_path(request.product, request), method: :delete, data: { confirm: 'Are you sure?' } %>
					    		
					    	</li>
					    	 
					    </ul>
				</li>

			
			<% end %>

		</ul>
			
		<div class="new-request"><%= link_to t('form.request.new'), new_product_request_path(Product.find(1)) %></div>
		<%= will_paginate %>

	</div>
</div>

